<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JAAT-AI - Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --sidebar-width: 260px;
            --primary-dark: #202123;
            --secondary-dark: #343541;
            --darker: #0f0f10;
            --light-text: #F7F7F8;
            --secondary-text: #ACACBE;
            --border-color: #4D4D4F;
            --accent-color: #10A37F;
            --hover-color: #2A2B32;
            --card-bg: #444654;
            --user-bubble: #343541;
            --ai-bubble: #444654;
            --border-radius: 0.375rem;
            --transition-timing: 0.3s ease;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            background-color: var(--secondary-dark);
            color: var(--light-text);
            display: flex;
            min-height: 100vh;
            overflow: hidden;
        }
        
        /* Scrollbar styles */
        ::-webkit-scrollbar {
            width: 0.5rem;
            height: 0.5rem;
        }
        
        ::-webkit-scrollbar-track {
            background: transparent;
        }
        
        ::-webkit-scrollbar-thumb {
            background: rgba(217, 217, 227, 0.2);
            border-radius: 0.5rem;
        }
        
        ::-webkit-scrollbar-thumb:hover {
            background: rgba(217, 217, 227, 0.3);
        }
        
        /* Sidebar */
        .sidebar {
            width: var(--sidebar-width);
            height: 100vh;
            background-color: var(--primary-dark);
            display: flex;
            flex-direction: column;
            overflow: hidden;
            position: relative;
            z-index: 10;
        }
        
        .sidebar-header {
            padding: 0.75rem 0.75rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            border-bottom: 1px solid var(--border-color);
        }
        
        .new-chat-button {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            background-color: transparent;
            color: var(--light-text);
            padding: 0.75rem;
            border: 1px solid var(--border-color);
            border-radius: var(--border-radius);
            cursor: pointer;
            width: 100%;
            font-size: 0.875rem;
            transition: background-color var(--transition-timing);
        }
        
        .new-chat-button:hover {
            background-color: var(--hover-color);
        }
        
        .sidebar-history {
            flex: 1;
            overflow-y: auto;
            padding: 0.75rem;
        }
        
        .sidebar-group {
            margin-bottom: 1.5rem;
        }
        
        .history-label {
            color: var(--secondary-text);
            font-size: 0.75rem;
            font-weight: 500;
            text-transform: uppercase;
            padding: 0.5rem 0.75rem;
            margin-bottom: 0.5rem;
        }
        
        .history-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem;
            border-radius: var(--border-radius);
            transition: background-color var(--transition-timing);
            cursor: pointer;
            color: var(--light-text);
            text-decoration: none;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
        
        .history-item:hover {
            background-color: var(--hover-color);
        }
        
        .history-item.active {
            background-color: var(--hover-color);
        }
        
        .history-item-icon {
            font-size: 0.875rem;
            color: var(--secondary-text);
        }
        
        .history-item-text {
            font-size: 0.875rem;
            flex: 1;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        
        .sidebar-footer {
            padding: 0.75rem;
            border-top: 1px solid var(--border-color);
        }
        
        .user-profile {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.5rem;
            border-radius: var(--border-radius);
            transition: background-color var(--transition-timing);
            cursor: pointer;
        }
        
        .user-profile:hover {
            background-color: var(--hover-color);
        }
        
        .user-avatar {
            width: 2rem;
            height: 2rem;
            border-radius: 50%;
            background-color: var(--accent-color);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            color: var(--light-text);
        }
        
        .user-name {
            font-size: 0.875rem;
            flex: 1;
        }
        
        .sidebar-options {
            margin-top: 0.75rem;
        }
        
        .sidebar-option {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem;
            border-radius: var(--border-radius);
            transition: background-color var(--transition-timing);
            cursor: pointer;
            font-size: 0.875rem;
        }
        
        .sidebar-option:hover {
            background-color: var(--hover-color);
        }
        
        /* Main Content */
        .main-content {
            flex: 1;
            display: flex;
            flex-direction: column;
            overflow: hidden;
            position: relative;
        }
        
        /* Mobile Header (visible on small screens) */
        .mobile-header {
            display: none;
            padding: 0.75rem 1rem;
            background-color: var(--secondary-dark);
            border-bottom: 1px solid var(--border-color);
        }
        
        .menu-button {
            background: none;
            border: none;
            color: var(--light-text);
            font-size: 1.25rem;
            cursor: pointer;
        }
        
        /* Chat Container */
        .chat-container {
            flex: 1;
            overflow-y: auto;
            padding: 1rem 0;
            scroll-behavior: smooth;
        }
        
        .welcome-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
            max-width: 48rem;
            margin: 0 auto;
            padding: 1rem;
            text-align: center;
        }
        
        .welcome-title {
            font-size: 2rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
        }
        
        .models-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1rem;
            width: 100%;
            margin-bottom: 2rem;
        }
        
        .model-card {
            background-color: var(--hover-color);
            padding: 1rem;
            border-radius: var(--border-radius);
            display: flex;
            flex-direction: column;
            cursor: pointer;
            transition: all var(--transition-timing);
            border: 1px solid transparent;
        }
        
        .model-card:hover {
            border-color: var(--accent-color);
        }
        
        .model-title {
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
        
        .model-description {
            font-size: 0.875rem;
            color: var(--secondary-text);
        }
        
        .examples-container {
            width: 100%;
        }
        
        .examples-title {
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }
        
        .examples-list {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1rem;
        }
        
        .example-item {
            background-color: var(--hover-color);
            padding: 1rem;
            border-radius: var(--border-radius);
            cursor: pointer;
            transition: background-color var(--transition-timing);
        }
        
        .example-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }
        
        .example-text {
            font-size: 0.875rem;
        }
        
        .chat-message {
            padding: 1.5rem;
            display: flex;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .chat-message.user {
            background-color: var(--user-bubble);
        }
        
        .chat-message.ai {
            background-color: var(--ai-bubble);
        }
        
        .message-avatar {
            width: 2rem;
            height: 2rem;
            border-radius: 0.25rem;
            margin-right: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }
        
        .user-avatar-icon {
            background-color: var(--hover-color);
            color: var(--light-text);
        }
        
        .ai-avatar-icon {
            background-color: var(--accent-color);
            color: var(--light-text);
        }
        
        .message-content {
            max-width: 48rem;
            margin: 0 auto;
            width: 100%;
            line-height: 1.5;
        }
        
        .message-text p {
            margin-bottom: 1rem;
        }
        
        .message-text p:last-child {
            margin-bottom: 0;
        }
        
        /* Chat Input */
        .chat-input-container {
            padding: 1.5rem;
            position: relative;
            display: flex;
            justify-content: center;
        }
        
        .chat-input-wrapper {
            position: relative;
            max-width: 48rem;
            width: 100%;
        }
        
        .chat-input {
            width: 100%;
            padding: 0.75rem 3rem 0.75rem 1rem;
            background-color: var(--hover-color);
            border: 1px solid var(--border-color);
            border-radius: var(--border-radius);
            color: var(--light-text);
            font-size: 1rem;
            font-family: inherit;
            resize: none;
            min-height: 3rem;
            max-height: 12rem;
            overflow-y: auto;
            line-height: 1.5;
        }
        
        .chat-input:focus {
            outline: none;
            border-color: var(--accent-color);
        }
        
        .chat-input::placeholder {
            color: var(--secondary-text);
        }
        
        .send-button {
            position: absolute;
            right: 0.75rem;
            bottom: 0.75rem;
            background: none;
            border: none;
            color: var(--light-text);
            cursor: pointer;
            font-size: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 2rem;
            height: 2rem;
            border-radius: 0.25rem;
            opacity: 0.7;
            transition: opacity var(--transition-timing);
        }
        
        .send-button:hover {
            opacity: 1;
            background-color: rgba(255, 255, 255, 0.1);
        }
        
        .input-info {
            color: var(--secondary-text);
            font-size: 0.75rem;
            text-align: center;
            padding: 0.5rem 0;
        }
        
        /* Typing Animation */
        .typing-animation {
            display: flex;
            gap: 0.5rem;
            padding: 0.5rem;
        }
        
        .typing-dot {
            width: 0.5rem;
            height: 0.5rem;
            background-color: var(--secondary-text);
            border-radius: 50%;
            animation: typingAnimation 1.4s infinite ease-in-out;
        }
        
        .typing-dot:nth-child(1) {
            animation-delay: 0s;
        }
        
        .typing-dot:nth-child(2) {
            animation-delay: 0.2s;
        }
        
        .typing-dot:nth-child(3) {
            animation-delay: 0.4s;
        }
        
        @keyframes typingAnimation {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-0.5rem);
            }
        }
        
        /* Responsive Styles */
        @media (max-width: 768px) {
            :root {
                --sidebar-width: 260px;
            }
            
            body {
                flex-direction: column;
            }
            
            .sidebar {
                position: fixed;
                left: -100%;
                transition: left var(--transition-timing);
                width: 80%;
                max-width: var(--sidebar-width);
            }
            
            .sidebar.open {
                left: 0;
            }
            
            .mobile-header {
                display: flex;
                align-items: center;
                justify-content: space-between;
            }
            
            .chat-container {
                height: calc(100vh - 120px);
            }
        }
        
        /* Modal */
        .modal-backdrop {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1000;
            visibility: hidden;
            opacity: 0;
            transition: visibility 0s linear 0.25s, opacity 0.25s linear;
        }
        
        .modal-backdrop.show {
            visibility: visible;
            opacity: 1;
            transition-delay: 0s;
        }
        
        .modal-content {
            background-color: var(--primary-dark);
            border-radius: var(--border-radius);
            max-width: 32rem;
            width: 90%;
            max-height: 90vh;
            overflow-y: auto;
        }
        
        .modal-header {
            padding: 1rem;
            border-bottom: 1px solid var(--border-color);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        
        .modal-title {
            font-size: 1.25rem;
            font-weight: 600;
        }
        
        .modal-close {
            background: none;
            border: none;
            color: var(--light-text);
            font-size: 1.25rem;
            cursor: pointer;
        }
        
        .modal-body {
            padding: 1rem;
        }
        
        .modal-footer {
            padding: 1rem;
            border-top: 1px solid var(--border-color);
            display: flex;
            justify-content: flex-end;
            gap: 0.75rem;
        }
        
        .modal-button {
            padding: 0.5rem 1rem;
            border-radius: var(--border-radius);
            font-size: 0.875rem;
            cursor: pointer;
            transition: all var(--transition-timing);
        }
        
        .modal-button.primary {
            background-color: var(--accent-color);
            color: white;
            border: none;
        }
        
        .modal-button.primary:hover {
            background-color: #0d8c6b;
        }
        
        .modal-button.secondary {
            background-color: transparent;
            color: var(--light-text);
            border: 1px solid var(--border-color);
        }
        
        .modal-button.secondary:hover {
            background-color: var(--hover-color);
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <button class="new-chat-button">
                <i class="fas fa-plus"></i>
                New chat
            </button>
        </div>
        
        <div class="sidebar-history">
            <div class="sidebar-group">
                <div class="history-label">Today</div>
                <div class="history-item active">
                    <i class="fas fa-message history-item-icon"></i>
                    <div class="history-item-text">Introduction to JAAT-AI</div>
                </div>
                <div class="history-item">
                    <i class="fas fa-message history-item-icon"></i>
                    <div class="history-item-text">Data analysis techniques</div>
                </div>
            </div>
            
            <div class="sidebar-group">
                <div class="history-label">Yesterday</div>
                <div class="history-item">
                    <i class="fas fa-message history-item-icon"></i>
                    <div class="history-item-text">Machine learning concepts</div>
                </div>
                <div class="history-item">
                    <i class="fas fa-message history-item-icon"></i>
                    <div class="history-item-text">Project roadmap discussion</div>
                </div>
                <div class="history-item">
                    <i class="fas fa-message history-item-icon"></i>
                    <div class="history-item-text">UI design feedback</div>
                </div>
            </div>
            
            <div class="sidebar-group">
                <div class="history-label">Previous 7 Days</div>
                <div class="history-item">
                    <i class="fas fa-message history-item-icon"></i>
                    <div class="history-item-text">Neural network optimization</div>
                </div>
                <div class="history-item">
                    <i class="fas fa-message history-item-icon"></i>
                    <div class="history-item-text">Sentiment analysis model</div>
                </div>
            </div>
        </div>
        
        <div class="sidebar-footer">
            <div class="user-profile">
                <div class="user-avatar">U</div>
                <div class="user-name">User Name</div>
                <i class="fas fa-ellipsis"></i>
            </div>
            
            <div class="sidebar-options">
                <div class="sidebar-option">
                    <i class="fas fa-gear"></i>
                    Settings
                </div>
                <div class="sidebar-option">
                    <i class="fas fa-sign-out-alt"></i>
                    Log out
                </div>
            </div>
        </div>
    </div>
    
    <!-- Main Content -->
    <div class="main-content">
        <!-- Mobile Header (only visible on small screens) -->
        <div class="mobile-header">
            <button class="menu-button" id="mobile-menu-btn">
                <i class="fas fa-bars"></i>
            </button>
            <div>JAAT-AI</div>
            <div></div>
        </div>
        
        <!-- Chat Container -->
        <div class="chat-container" id="chat-container">
            <!-- Welcome Screen (shows when no chat is active) -->
            <div class="welcome-container" id="welcome-screen" style="display: none;">
                <h1 class="welcome-title">How can I help you today?</h1>
                
                <div class="models-container">
                    <div class="model-card">
                        <div class="model-title">JAAT-AI Standard</div>
                        <div class="model-description">Our fastest model, great for everyday tasks</div>
                    </div>
                    <div class="model-card">
                        <div class="model-title">JAAT-AI Pro</div>
                        <div class="model-description">Advanced capabilities for complex tasks</div>
                    </div>
                </div>
                
                <div class="examples-container">
                    <div class="examples-title">Examples</div>
                    <div class="examples-list">
                        <div class="example-item">
                            <div class="example-text">Explain quantum computing in simple terms</div>
                        </div>
                        <div class="example-item">
                            <div class="example-text">Generate a creative story about a space explorer</div>
                        </div>
                        <div class="example-item">
                            <div class="example-text">How do I make an HTTP request in JavaScript?</div>
                        </div>
                        <div class="example-item">
                            <div class="example-text">Create a weekly meal plan with a shopping list</div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Chat Messages -->
            <div class="chat-message ai">
                <div class="message-avatar ai-avatar-icon">
                    <i class="fas fa-robot"></i>
                </div>
                <div class="message-content">
                    <div class="message-text">
                        <p>Hello! I'm JAAT-AI, your advanced AI assistant. How can I help you today?</p>
                        <p>You can ask me questions, request information, or get help with various tasks. I'm here to assist you with whatever you need.</p>
                    </div>
                </div>
            </div>
            
            <div class="chat-message user">
                <div class="message-avatar user-avatar-icon">
                    <i class="fas fa-user"></i>
                </div>
                <div class="message-content">
                    <div class="message-text">
                        <p>Can you tell me about the key features of JAAT-AI?</p>
                    </div>
                </div>
            </div>
            
            <div class="chat-message ai">
                <div class="message-avatar ai-avatar-icon">
                    <i class="fas fa-robot"></i>
                </div>
                <div class="message-content">
                    <div class="message-text">
                        <p>Of course! JAAT-AI comes with several powerful features designed to enhance your experience:</p>
                        <p>1. <strong>Advanced Language Processing</strong>: I can understand and generate human-like text, making our conversations natural and intuitive.</p>
                        <p>2. <strong>Multimodal Capabilities</strong>: I can work with different types of data including text, code, and structured information.</p>
                        <p>3. <strong>Personalized Responses</strong>: I adapt to your preferences and needs over time.</p>
                        <p>4. <strong>Knowledge Database</strong>: I have access to a wide range of information across various domains.</p>
                        <p>5. <strong>Specialized Modes</strong>: You can switch between different AI modes optimized for specific tasks like coding, creative writing, or data analysis.</p>
                        <p>Would you like me to elaborate on any of these features or explain how to use them effectively?</p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Chat Input -->
        <div class="chat-input-container">
            <div class="chat-input-wrapper">
                <textarea class="chat-input" id="chat-input" placeholder="Message JAAT-AI..." rows="1"></textarea>
                <button class="send-button" id="send-button">
                    <i class="fas fa-paper-plane"></i>
                </button>
            </div>
            <div class="input-info">
                JAAT-AI is designed to be helpful, harmless, and honest.
            </div>
        </div>
    </div>
    
    <!-- Settings Modal -->
    <div class="modal-backdrop" id="settings-modal">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">Settings</div>
                <button class="modal-close" id="close-settings">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <!-- Settings content would go here -->
                <p>Settings options will appear here.</p>
            </div>
            <div class="modal-footer">
                <button class="modal-button secondary" id="cancel-settings">Cancel</button>
                <button class="modal-button primary" id="save-settings">Save Changes</button>
            </div>
        </div>
    </div>
    
    <script>
        // Auto-resize textarea
        const chatInput = document.getElementById('chat-input');
        chatInput.addEventListener('input', function() {
            this.style.height = 'auto';
            this.style.height = (this.scrollHeight) + 'px';
        });
        
        // Mobile menu toggle
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const sidebar = document.querySelector('.sidebar');
        
        if (mobileMenuBtn) {
            mobileMenuBtn.addEventListener('click', function() {
                sidebar.classList.toggle('open');
            });
        }
        
        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(event) {
            if (sidebar.classList.contains('open') && 
                !sidebar.contains(event.target) && 
                event.target !== mobileMenuBtn) {
                sidebar.classList.remove('open');
            }
        });
        
        // Settings modal
        const settingsOption = document.querySelector('.sidebar-option');
        const settingsModal = document.getElementById('settings-modal');
        const closeSettings = document.getElementById('close-settings');
        const cancelSettings = document.getElementById('cancel-settings');
        
        settingsOption.addEventListener('click', function() {
            settingsModal.classList.add('show');
        });
        
        function closeSettingsModal() {
            settingsModal.classList.remove('show');
        }
        
        closeSettings.addEventListener('click', closeSettingsModal);
        cancelSettings.addEventListener('click', closeSettingsModal);
        
        // Close modal when clicking outside
        settingsModal.addEventListener('click', function(event) {
            if (event.target === settingsModal) {
                closeSettingsModal();
            }
        });
        
        // Send message
        const sendButton = document.getElementById('send-button');
        const chatContainer = document.getElementById('chat-container');
        
        sendButton.addEventListener('click', sendMessage);
        chatInput.addEventListener('keydown', function(event) {
            if (event.key === 'Enter' && !event.shiftKey) {
                event.preventDefault();
                sendMessage();
            }
        });
        
        function sendMessage() {
            const message = chatInput.value.trim();
            if (!message) return;
            
            // Add user message
            addChatMessage('user', message);
            
            // Clear input
            chatInput.value = '';
            chatInput.style.height = 'auto';
            
            // Simulate AI thinking with typing animation
            setTimeout(() => {
                // Add AI response after "thinking"
                addChatMessage('ai', 'I\'m processing your request. This is a sample response that would be replaced with an actual AI response in a fully functional implementation.');
            }, 1500);
            
            // Scroll to bottom
            scrollToBottom();
        }
        
        function addChatMessage(type, text) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `chat-message ${type}`;
            
            const avatar = document.createElement('div');
            avatar.className = `message-avatar ${type}-avatar-icon`;
            
            const icon = document.createElement('i');
            icon.className = type === 'user' ? 'fas fa-user' : 'fas fa-robot';
            avatar.appendChild(icon);
            
            const content = document.createElement('div');
            content.className = 'message-content';
            
            const messageText = document.createElement('div');
            messageText.className = 'message-text';
            
            // Split text into paragraphs
            text.split('\n').forEach(paragraph => {
                if (paragraph.trim()) {
                    const p = document.createElement('p');
                    p.textContent = paragraph;
                    messageText.appendChild(p);
                }
            });
            
            content.appendChild(messageText);
            messageDiv.appendChild(avatar);
            messageDiv.appendChild(content);
            
            chatContainer.appendChild(messageDiv);
        }
        
        function scrollToBottom() {
            chatContainer.scrollTop = chatContainer.scrollHeight;
        }
        
        // Initial scroll to bottom
        scrollToBottom();
    </script>
</body>
</html>